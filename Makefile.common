CC	= m68k-amigaos-gcc -noixemul -std=gnu9x
AS	= vasm
CFLAGS	= -O2 -Wall -m68020-60 -fbaserel -I$(realpath $(TOPDIR)) -DNDEBUG
ASFLAGS = -m68020 -m68882 -I$(realpath $(TOPDIR))
LIBS	= -lamiga -lm

%.o: %.s
	$(AS) $(ASFLAGS) -o $@ $<

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

%.s: %.c
	$(CC) $(CFLAGS) -S -o $@ $<

%.a:
	m68k-amigaos-ar cr $@ $^
	m68k-amigaos-ranlib $@

