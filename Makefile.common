CC	= vc +small
AS	= vc +small
CFLAGS	= -O2 -cpu=68020 -fpu=68882 -I$(realpath $(TOPDIR))
ASFLAGS = -O2 -cpu=68020 -fpu=68882 -I$(realpath $(TOPDIR))
LIBS	= -lamigas -ldebug 

%.o: %.s
	$(AS) $(ASFLAGS) -c -o $@ $<

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

%.s: %.c
	$(CC) $(CFLAGS) -S -o $@ $<

%.lib:
	cat $^ > $@

